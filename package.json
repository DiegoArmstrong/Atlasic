{
  "name": "atlasic",
  "displayName": "Atlasic",
  "description": "AI-powered codebase visualization and dependency graph tool",
  "version": "1.1.0",
  "license": "MIT",
  "icon": "images/icon.png",
  "publisher": "atlasic",
  "authors": [
    {
      "name": "Diego Armstrong",
      "email": "diegoarmstrong84@gmail.com"
    },
    {
      "name": "Tamzeed Quazi",
      "email": "tamzeed.q@gmail.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/DiegoArmstrong/Atlasic"
  },
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Debuggers",
    "Visualization",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "files": [
    "dist/**",
    "images/**",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "contributes": {
    "commands": [
      {
        "command": "atlasic.generateCodebaseMap",
        "title": "Atlasic: Generate Dependency Map"
      },
      {
        "command": "atlasic.openVisualizer",
        "title": "Atlasic: Open Dependency Visualizer"
      },
      {
        "command": "atlasic.refreshGraph",
        "title": "Atlasic: Refresh Graph"
      },
      {
        "command": "atlasic.clearCache",
        "title": "Atlasic: Clear Cache"
      },
      {
        "command": "atlasic.openDebugChat",
        "title": "Atlasic: Open Debug Assistant"
      },
      {
        "command": "atlasic.analyzeChanges",
        "title": "Atlasic: Analyze Git Changes"
      }
    ],
    "configuration": {
      "title": "Atlasic",
      "properties": {
        "atlasic.ignorePatterns": {
          "type": "array",
          "default": [
            "node_modules",
            "dist",
            "build",
            ".git",
            "__pycache__",
            ".venv",
            ".next",
            "out",
            "coverage"
          ],
          "description": "Patterns to ignore during file discovery"
        },
        "atlasic.maxDepth": {
          "type": "number",
          "default": 10,
          "description": "Maximum directory traversal depth"
        },
        "atlasic.supportedLanguages": {
          "type": "array",
          "default": [
            ".ts",
            ".tsx",
            ".js",
            ".jsx",
            ".py",
            ".java",
            ".go"
          ],
          "description": "File extensions to analyze"
        },
        "atlasic.apiKey": {
          "type": "string",
          "default": "",
          "description": "OpenRouter API Key for AI features",
          "markdownDescription": "Your OpenRouter API key for AI-powered features. Get one at https://openrouter.ai/"
        },
        "atlasic.aiModel": {
          "type": "string",
          "enum": [
            "google/gemini-3-flash-preview",
            "google/gemini-2-flash-preview",
            "google/gemini-2-pro-exp-02-05",
            "google/gemini-pro"
          ],
          "default": "google/gemini-3-flash-preview",
          "description": "Gemini model to use for AI features",
          "markdownDescription": "Select which Google Gemini model to use for AI-powered features (debug chat, git analysis)"
        },
        "atlasic.enableAIFeatures": {
          "type": "boolean",
          "default": true,
          "description": "Enable AI-powered features (debug chat, git analysis)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build:native && npm run compile",
    "build:native": "napi build --manifest-path native/Cargo.toml --release --platform --output-dir dist/native",
    "compile": "tsc -p ./ && node esbuild.js",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@napi-rs/cli": "^3.5.1",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.108.1",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "esbuild": "^0.19.11",
    "eslint": "^8.55.0",
    "typescript": "^5.3.3"
  }
}
